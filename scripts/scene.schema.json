{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://yocto-gl.com/scene.schema.json",
  "title": "Yocto/GL Scene Format",
  "description": "The scene format used by Yocto/GL",
  "type": "object",
  "properties": {
    "asset": {
      "description": "asset information",
      "type": "object",
      "properties": {
        "copyright": {
          "description": "Copyright string",
          "type": "string"
        },
        "generator": {
          "description": "Generator string",
          "type": "string"
        }
      }
    },
    "cameras": {
      "description": "Scene cameras",
      "type": "object",
      "additionalProperties": {
        "description": "Camera",
        "type": "object",
        "properties": {
          "frame": {
            "description": "Frame",
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "lens": {
            "description": "Lens",
            "type": "number"
          },
          "aspect": {
            "description": "Aspect ratio",
            "type": "number"
          },
          "focus": {
            "description": "Focus distance",
            "type": "number"
          },
          "aperture": {
            "description": "Lens aperture",
            "type": "number"
          },
          "ortho": {
            "description": "Whether the camera is orthographic",
            "type": "boolean"
          }
        }
      }
    },
    "environments": {
      "description": "Scene environments",
      "type": "object",
      "additionalProperties": {
        "description": "Environment",
        "type": "object",
        "properties": {
          "frame": {
            "description": "Frame",
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "emission": {
            "description": "Emission",
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "emission_tex": {
            "description": "Environment map file name",
            "type": "string"
          }
        }
      }
    },
    "materials": {
      "description": "Scene materials",
      "type": "object",
      "additionalProperties": {
        "description": "Object",
        "type": "object",
        "properties": {
          "emission": {
            "description": "Emission",
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "color": {
            "description": "Color",
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "roughness": {
            "description": "Roughness",
            "type": "number"
          },
          "metallic": {
            "description": "Metallic",
            "type": "number"
          },
          "ior": {
            "description": "Ior",
            "type": "number"
          },
          "scattering": {
            "description": "Volume scattering",
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "scanisotropy": {
            "description": "Scattering anisotropy",
            "type": "number"
          },
          "trdepth": {
            "description": "Transmission depth",
            "type": "number"
          },
          "opacity": {
            "description": "Opacity",
            "type": "number"
          },
          "displacement": {
            "description": "Displacement",
            "type": "number"
          },
          "emission_tex": {
            "description": "Emission map",
            "type": "string"
          },
          "color_tex": {
            "description": "Color",
            "type": "string"
          },
          "roughness_tex": {
            "description": "Roughness",
            "type": "string"
          },
          "metallic_tex": {
            "description": "Metallic",
            "type": "string"
          },
          "scattering_tex": {
            "description": "Volume scattering",
            "type": "string"
          },
          "displacement_tex": {
            "description": "Displacement map",
            "type": "string"
          },
          "normal_tex": {
            "description": "Normal map",
            "type": "string"
          }
        }
      }
    }
  }
}
